@model List<CartItem>

<h2>Your Cart</h2>
<div class="row">
    <div class="col-md-12">
@if (!Model.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Title</th>
                <th>Price</th>
                <th>Qty</th>
                <th>Subtotal</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@Url.Content("~/uploads/books/" + item.CoverImage)" alt="@item.Title" class="img-fluid rounded" style="height: 100px; object-fit: cover; width: 100%;" />
                    </td>
                    <td>@item.Title</td>
                    <td>@item.Price </td>
                    <td>@item.Quantity</td>
                    <td>@(item.Price * item.Quantity) AED</td>
                    <td>
                        <a asp-action="RemoveFromCart" asp-route-id="@item.BookId" class="btn btn-danger btn-sm">
                            Remove
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
            <div class="row align-items-center">
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <h4>Total: @ViewBag.Subtotal AED</h4>
                    <a href="@Url.Action("CreateCheckoutSession", "Checkout")" class="btn btn-primary">Checkout</a>
                </div>

            </div>

}
</div>
</div>