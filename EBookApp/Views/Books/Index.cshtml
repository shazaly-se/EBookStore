@model IEnumerable<Book>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager
@{
    ViewData["Title"] = "Books";
}
<div class="row mb-3">
    <div class="col-md-12 d-flex justify-content-between align-items-center">
      @if (User.IsInRole("Admin"))
{
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Create new
    </a>
}
        <form class="d-flex" asp-action="Index" method="get" style="min-width: 300px;">
            <input class="form-control me-2" type="search"
                   name="searchString"
                   value="@ViewData["CurrentFilter"]"
                   placeholder="Search" aria-label="Search" />
            <button class="btn btn-outline-success d-inline-flex align-items-center" type="submit">
                <i class="bi bi-search me-1"></i> Search
            </button>
        </form>
    </div>
</div>



<hr />
<div class="row g-4">
   

    @foreach (var item in Model)
    {
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 d-flex flex-column">
                <div class="d-flex p-3 flex-grow-1">
                    <div style="flex: 0 0 40%;">
                        <img src="@Url.Content("~/uploads/books/" + item.CoverImage)" alt="@item.Title" class="img-fluid rounded" style="height: 220px; object-fit: cover; width: 100%;" />
                    </div>
                    <div class="flex-grow-1 ps-3 d-flex flex-column justify-content-between">
                        <div>
                            <p class="card-title">@item.Title</p>
                            <div class="d-flex justify-content-between">
                                <small class="text-muted">@item.Author?.Name </small>
                                <strong class="text-primary">$@item.Price</strong>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-footer bg-transparent border-top d-flex justify-content-between">
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-controller="Books" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm"><i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-action="Details" asp-controller="Books" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm"><i class="bi bi-eye"></i> Details</a>
                        <form asp-action="Delete" asp-controller="Books" asp-route-id="@item.Id" method="post" style="display:inline;"
                              onsubmit="return confirm('Are you sure you want to delete this author?');">
                            <button type="submit" class="btn btn-danger text-white">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </form>
                    }
                    <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@item.Id" class="btn btn-success">
                        Add to Cart
                    </a>

                </div>
            </div>
        </div>
    }
</div>
