@model Author
@{
    ViewData["Title"] = "Author details";
}

<div class="row">
    <h4>Author Details</h4>
    <hr />
    <div class="col-md-8 offset-md-2 d-flex" style="min-height: 100px;">
        <div style="flex: 0 0 30%; max-width: 40%;">
            <img src="@Url.Content("~/uploads/profiles/" + Model.ProfilePicture)"
                 alt="@Model.Name" class="img-fluid rounded" style="height: 100%; object-fit: cover; width: 100%;" />
        </div>

        <div class="d-flex flex-column justify-content-between" style="flex: 1; padding-left: 20px;">
            <h2>@Model.Name</h2>
            <p>@Model.Bio</p>
        </div>
    </div>
</div>

<div class="row mt-5">
    <h5>Top @Model.Name titles</h5>
    <hr />
@if (Model.Books != null && Model.Books.Any())
{
       
        <div class="row g-4">


            @foreach (var item in Model.Books)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 d-flex flex-column">
                        <div class="d-flex p-3 flex-grow-1">
                            <div style="flex: 0 0 40%;">
                                <img src="@Url.Content("~/uploads/books/" + item.CoverImage)" alt="@item.Title" class="img-fluid rounded" style="height: 220px; object-fit: cover; width: 100%;" />
                            </div>
                            <div class="flex-grow-1 ps-3 d-flex flex-column justify-content-between">
                                <div>
                                    <p class="card-title">@item.Title</p>
                                    <div class="d-flex justify-content-between">
                                        <small class="text-muted">@item.Author?.Name </small>
                                        <strong class="text-primary">$@item.Price</strong>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card-footer bg-transparent border-top d-flex justify-content-between">
                            <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@item.Id" class="btn btn-success">
                                Add to Cart
                            </a>
                            <a asp-action="Details" asp-controller="Books" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm"><i class="bi bi-eye"></i> Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>

}
else
{
    <p>No books found for this author.</p>
}
</div>