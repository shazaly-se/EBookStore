@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<section class="bg-dark text-white py-5" style="background:linear-gradient(rgba(0,0,0,0.7),rgba(0,0,0,0.7)),url('/images/hero-tech.jpg') center/cover no-repeat;">
    <div class="container text-center">
        <h1 class="display-3 fw-bold">Learn. Code. Innovate.</h1>
        <p class="lead mt-3">Your #1 destination for programming, AI, and tech books.</p>
        <a href="/Books" class="btn btn-primary btn-lg mt-3">
            Browse Collection <i class="bi bi-arrow-right-circle"></i>
        </a>
    </div>
</section>

<!-- About / Welcome Section -->
<section class="py-5">
    <div class="container text-center">
        <h2 class="fw-bold">Welcome to EBookApp</h2>
        <p class="text-muted mx-auto" style="max-width: 700px;">
            At <strong>EBookApp</strong>, we believe knowledge is power. Whether you are starting your coding journey or looking to master advanced AI algorithms,
            our curated collection of technology books will help you reach your goals faster.
        </p>
    </div>
</section>

<!-- Categories Section -->
<section class="py-5 bg-light">
    <div class="container">
        <h3 class="fw-bold mb-4 text-center">Explore Categories</h3>
        <div class="row g-4">
            <div class="col-md-3">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body text-center">
                        <i class="bi bi-code-slash fs-1 text-primary"></i>
                        <h5 class="mt-3">Programming</h5>
                        <p class="text-muted">From Python to C#, learn the languages that power the world.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body text-center">
                        <i class="bi bi-graph-up fs-1 text-success"></i>
                        <h5 class="mt-3">Data Science</h5>
                        <p class="text-muted">Master data analytics, visualization, and big data tools.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body text-center">
                        <i class="bi bi-cpu fs-1 text-warning"></i>
                        <h5 class="mt-3">AI & Machine Learning</h5>
                        <p class="text-muted">Explore neural networks, deep learning, and AI ethics.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body text-center">
                        <i class="bi bi-shield-lock fs-1 text-danger"></i>
                        <h5 class="mt-3">Cybersecurity</h5>
                        <p class="text-muted">Protect systems with ethical hacking and secure coding.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="py-5 text-white" style="background-color:#0d6efd;">
    <div class="container text-center">
        <h3 class="fw-bold">Ready to level up your tech skills?</h3>
        <p class="mb-4">Join thousands of learners who trust EBookApp for their tech education.</p>
        <a href="/Account/Register" class="btn btn-light btn-lg">
            Get Started <i class="bi bi-arrow-right"></i>
        </a>
    </div>
</section>
